{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "jsx": "preserve",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "src/*": [
                "src/*"
            ],
            "api/*": [
                "src/api/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types"
        ],
        "outDir": "./dist",
        "declaration": true,
        "sourceMap": true,
        "noEmit": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "rootDir": "./",
        "strictPropertyInitialization": false,
        "allowImportingTsExtensions": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}